[Desktop Entry]
Type=Service
ServiceTypes=KonqPopupMenu/Plugin
MimeType=application/vnd.efi.iso;
Actions=check-hash

[Desktop Action check-hash]
Name=Verificar com arquivo chechsum
Exec=/usr/local/bin/acao_verificar-hash.sh %U
Icon=utilities-terminal



# KDE usa ServiceMenus para adicionar ações personalizadas no menu de contexto do Dolphin. 
# Os caminhos típicos são:

#       Local	                                    Função

# ~/.local/share/kservices5/ServiceMenus/	 Para adicionar ServiceMenus do usuário
# /usr/share/kservices5/ServiceMenus/	     Para ServiceMenus globais do sistema


